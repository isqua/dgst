{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
